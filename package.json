{
	"name": "jonahsnider.com",
	"version": "4.0.0",
	"private": true,
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonahsnider.com",
		"url": "https://jonahsnider.com"
	},
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"preexport": "rm -rf out",
		"export": "next export",
		"lint": "xo",
		"start": "next start",
		"style": "prettier --check ."
	},
	"xo": {
		"extends": [
			"xo",
			"xo/browser",
			"xo-react"
		],
		"ignores": [
			"public"
		],
		"overrides": [
			{
				"extends": [
					"xo"
				],
				"files": [
					"*.config.js",
					"src/config/*.ts"
				]
			},
			{
				"rules": {
					"@typescript-eslint/triple-slash-reference": "off"
				},
				"files": [
					"next-env.d.ts"
				]
			}
		],
		"prettier": true,
		"rules": {
			"import/no-unassigned-import": [
				"error",
				{
					"allow": [
						"firebase/*",
						"firebase"
					]
				}
			],
			"react/no-unescaped-entities": "off",
			"react/prop-types": "off",
			"react/react-in-jsx-scope": "off",
			"unicorn/prefer-node-protocol": "off"
		}
	},
	"dependencies": {
		"@types/node": "16.4.13",
		"@types/react": "17.0.16",
		"clsx": "1.1.1",
		"next": "11.0.1",
		"next-compose-plugins": "2.2.1",
		"next-pwa": "5.2.24",
		"next-seo": "4.26.0",
		"next-themes": "beta",
		"normalize.css": "8.0.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"sass": "1.37.5",
		"typescript": "4.3.5"
	},
	"devDependencies": {
		"eslint-config-xo-react": "0.25.0",
		"eslint-plugin-prettier": "3.4.0",
		"eslint-plugin-react": "7.24.0",
		"eslint-plugin-react-hooks": "4.2.0",
		"netlify-plugin-cache-nextjs": "1.6.1",
		"prettier": "2.3.2",
		"xo": "0.44.0"
	},
	"packageManager": "yarn@3.0.0"
}
